@model ModsViewModel
@{
    ViewData["Title"] = "Mods";
    ViewData["Description"] = "Our girls are even creators of aoe modifications. Check them out here.";
    ViewData["OgDescription"] = "Our girls are even creators of aoe modifications. Check them out here.";
    ViewData["OgImage"]="https://age-of-queens.com/images/og/age_of_queens_banner.png";
    ViewData["OgUrl"] = "https://age-of-queens.com/Mods";
}
<div class="col-12">
    <section>
    @if (Model.ModList != null)
    {  
        @foreach (ModsViewModel.Mod mod in Model.ModList)
        {
        <div data-aos="fade-right" id="mod-container" class="clickable shadow" onclick="window.open('@mod.ModUrl')">
            <img src="@mod.ImageUrl" />
            <div id="mod-content">
                <h2>@mod.Name - @mod.Creator</h2>
                <p>@mod.Category</p>
                <p>@mod.Description</p>
            </div>
        </div>
        }
    }
    else 
    {
        <div class="alert alert-warning" role="alert">Error while loading the content.</div>
    }
    </section>
</div>